<!-- /templates/customers/reset_password.liquid -->

<section class="content-section-inner first center-align valign-wrapper">
  <div class="container">
    <div class="row">
      <div class="section-heading col s12">
        <h2>Passwort zur&uuml;cksetzen</h2>
        <div class="divider"></div>
      </div>
    </div>
    <div class="row">
      <p class="col s12 center-align">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
    </div>
    <div class="row">
      <div class="form-vertical col s12">
        {% form 'reset_customer_password' %}

          {{ form.errors | default_errors }}

          <div class="row">
            <input type="password" placeholder="Passwort" name="customer[password]" id="ResetPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}">
            <input type="password" placeholder="Passwort best&auml;tigen" name="customer[password_confirmation]" id="PasswordConfirmation" class="input-full{% if form.errors contains 'password_confirmation' %} error{% endif %}">
          </div>
          <div class="row">
            <div class="btn_group col s12 m6 offset-m3">
              <input type="submit" class="btn primary-btn" value="{{ 'customer.reset_password.submit' | t }}">
            </div>
          </div>

        {% endform %}
      </div>
    </div>
  </div>
</section>
