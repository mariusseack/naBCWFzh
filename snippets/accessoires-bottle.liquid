<section class="tea-template template-header">
  <div class="parallax-container">
    <div class="parallax"><img src="{{ 'quote-bg.png' | asset_url }}"></div>
    <div class="heading-container">
      <div class="fixed">
        <h1 class="heading">Teeflasche</h1>
        <p class="center-align">Exklusive & hochwertige Accessoires von Cup Society</p>
      </div>
    </div>
  </div>
</section>

<!-- Buy-section -->
<section class="content-section-inner tea-template">
  <div class="product-overview row">
    <div class="product-picture-wrapper col s12 m6 l6 xl6">
      <div class="main-productpicture-wrapper pointer center-align">
        <img src="{{ product.images[0].src | product_img_url: 'large' }}" alt="{{ product.images[0].alt }}" class="main-productpicture">
      </div>

      <div class="inline-productpicture-wrapper pointer">
        {% for image in product.images %}
          {%- if image != product.images[0] -%}
          <div class="image-element">
            <img src="{{ image.src | product_img_url: 'small' }}" alt="{{ image.alt }}" class="inline-productpicture">   <!-- load small -->
          </div>
          {%- endif -%}
        {% endfor %}
      </div>
    </div>
    <div class="productinformation-wrapper col s12 m6 l6 xl6 right">
      <p class="subheading no-margin">Exklusives & hochwertiges Accessoire</p>
      <h4 class="heading">{{product.title}}</h4>
      <p class="productdescription">{{product.description}}</p>
      <p class="price"><span id="product_price">{{product.variants[0].price | money }}</span></p>
      <!-- Preis aendern, wenn eine andere Option gewahlt wird -->
      {{ product.selected_variant.id }}
      <form action="/cart/add" method="post" enctype="multipart/form-data" class="product-form" id="AddToCartForm">
        <div class="input-field">
          <select id="product_select">
            {%- for variant in product.variants -%}
              <option value="{{ variant.price | money }}" {%- if variant == product.variants[0] -%}selected{%- endif -%}>{{ variant.option1 }} - {{ variant.price | money }}</option>
            {%- endfor -%}
          </select>
          <label>W&auml;hle eine Variante</label>
        </div>
        <button type="submit" class="btn primary-btn-black col s12" name="add" id="AddToCart">In den Warenkorb</button>
      </form>
    </div>
  </div>
</section>
<!-- Buy-section -->

